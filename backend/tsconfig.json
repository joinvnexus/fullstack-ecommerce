{
  "compilerOptions": {
    "target": "ES2020",          // JavaScript ES2020 version compile korbe
    "module": "ESNext",        // ESNext modules use korbe (Node.js er jonno)
    "lib": ["ES2020"],          // ES2020 features allow korbe
    "outDir": "./dist",         // Compiled files jabe "dist" folder e
    "rootDir": "./src",            // Source files current directory theke
    "strict": true,             // Strict TypeScript checking enable
    "esModuleInterop": true,    // ES6 modules er compatibility
    "skipLibCheck": true,       // Library files check korbe na (fast compile)
    "forceConsistentCasingInFileNames": true, // File name case sensitive
    "resolveJsonModule": true,  // JSON files import kora jabe
    "moduleResolution": "node", // Node.js style module resolution
    "types": ["node"],   // Node.js types include
    "typeRoots": ["./types", "./node_modules/@types"], // Types er location
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force"
  },
  "include": ["**/*.ts", "**/*.d.ts"], // .ts sob files include
  "exclude": ["node_modules", "dist"]  // Ei folder gula exclude
}
